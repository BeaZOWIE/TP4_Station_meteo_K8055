//---------------------------------------------------------------------------

#pragma hdrstop

#include "Fonction.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)


Fonction :: Fonction (long adr)
{
	 this->adr = adr;
	 etat = true;
	 long h = OpenDevice(adr);

	 if (h == -1)
	 {
		etat = false;
	 }
}

Fonction :: ~Fonction ()
{
   if(etat == true)
   {
	   CloseDevice();
   }
}

bool Fonction :: getEtat ()
{
	return etat;
}

long Fonction :: CarReadAnalogChannel(long channel)
{
	switch(channel)
	{
		case 1:
			return 128;
		case 2:
			return 50;
	}

	return -1;
}