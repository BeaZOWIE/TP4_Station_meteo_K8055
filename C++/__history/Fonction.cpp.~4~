#pragma package(smart_init)


CarteK8055 :: CarteK8055 (long adr)
{
	 this->adr = adr;
	 etat = true;
	 long h = OpenDevice(adr);

	 if (h == -1)
	 {
		etat = false;
	 }
}
void CloseDevice()
{

}

long ReadAnalogChannel(long channel)
{
	switch(channel)
	{
		case 1:
			return 128;
		case 2:
			return 50;
	}

	return -1;
}